{
  "name": "converze-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --webpack",
    "build:npx": "npx next build --webpack",
    "postbuild": "node scripts/copy-static.js",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch --watchPathIgnorePatterns='<rootDir>/.next' --watchPathIgnorePatterns='<rootDir>/node_modules' --watchPathIgnorePatterns='<rootDir>/.deploy' --watchPathIgnorePatterns='<rootDir>/coverage'",
    "test:watch:safe": "ulimit -n 4096 && jest --watch --watchPathIgnorePatterns='<rootDir>/.next' --watchPathIgnorePatterns='<rootDir>/node_modules' --watchPathIgnorePatterns='<rootDir>/.deploy'",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:skip": "echo 'Skipping E2E tests - run manually with: npm run test:e2e'",
    "test:all": "npm run test:ci",
    "test:all-with-e2e": "npm run test:ci && npm run test:e2e",
    "test:local": "npm run test:watch",
    "test:pre-push": "bash scripts/test-local.sh",
    "lint": "next lint",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@portabletext/react": "^6.0.2",
    "@sanity/client": "^7.14.1",
    "@sanity/image-url": "^2.0.3",
    "groq": "^5.6.0",
    "next": "^16.1.4",
    "next-sanity": "^12.0.14",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sanity": "^5.6.0",
    "styled-components": "^6.3.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "25.0.9",
    "@types/react": "19.2.8",
    "@types/styled-components": "^5.1.36",
    "autoprefixer": "^10.4.23",
    "critters": "^0.0.23",
    "dotenv": "^16.4.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "5.9.3"
  }
}
